{
  "name": "vscode-language-server-obsidian",
  "displayName": "Obsidian Language Service",
  "description": "Go to definition support for Obsidian dependency injection framework",
  "icon": "obsidian.png",
  "version": "0.0.14",
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wix-incubator/obsidian.git"
  },
  "main": "./client/out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Obsidian",
      "properties": {
        "obsidianLanguageServer.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the Obsidian language server."
        }
      }
    }
  },
  "devDependencies": {
    "esbuild": "^0.25.3"
  }
}
